<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Sentiment_Output__c</fullName>
    <description>Formula that calculates a sentiment phrase based on the sentiment score calculated by the ML model in the Salesforce function</description>
    <externalId>false</externalId>
    <formula>IF( Sentiment_Score__c &gt;0.6, &quot;Positive&quot;, IF(Sentiment_Score__c &gt;0.4,&quot;Neutral&quot;,&quot;Negative&quot;))</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Predicted Sentiment</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Text</type>
    <unique>false</unique>
</CustomField>
