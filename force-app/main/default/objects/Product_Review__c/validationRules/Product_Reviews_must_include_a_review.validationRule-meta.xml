<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Product_Reviews_must_include_a_review</fullName>
    <active>true</active>
    <description>Product Reviews must include a review when created</description>
    <errorConditionFormula>AND(
ISNEW() ,
 ISBLANK( Review__c ) 

)</errorConditionFormula>
    <errorMessage>A review must be added</errorMessage>
</ValidationRule>
